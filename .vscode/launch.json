  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/index.ts",
      "envFile": "${workspaceFolder}/.env",
      "outputCapture": "std",
      "env": {
        "NODE_ENV": "local"
      }
    },
    {
      "name": "Attach to port",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    }
  ]
}
